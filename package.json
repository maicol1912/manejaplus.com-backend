{
  "name": "manejaplus-back",
  "version": "0.0.1",
  "description": "Proyecto para la gestion de tu empresa  ",
  "author": "maicoldev",
  "repository": {
    "type": "git",
    "url": "https://github.com/maicol1912/manejaplus.com-frontend"
  },
  "keywords": [
    "Saas",
    "manejaplus",
    "startup"
  ],
  "engines": {
    "node": ">=20.15.0",
    "npm": ">=10.8.1"
  },
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build && ts-node src/tools/copyAssets.ts",
    "tools": "ts-node src/tools/copyAssets.ts",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start:dev": "concurrently \"cross-env NODE_ENV=development nest start --watch | pino-pretty -c\" \"ts-node src/tools/copyAssets.ts\"",
    "start:debug": "cross-env NODE_ENV=production nest start --debug --watch | pino-pretty -c",
    "start:prod": "cross-env NODE_ENV=development node dist/main.js | pino-pretty -c",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix"
  },
  "dependencies": {
    "@adminjs/mongoose": "^4.1.0",
    "@elastic/elasticsearch": "^8.14.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/typeorm": "^10.0.2",
    "@types/amqplib": "^0.10.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/express-session": "^1.18.0",
    "@types/fs-extra": "^11.0.4",
    "@types/glob": "^8.1.0",
    "@types/nodemailer": "^6.4.15",
    "@types/shelljs": "^0.8.15",
    "@types/twilio": "^3.19.3",
    "@types/uuid": "^10.0.0",
    "amqplib": "^0.10.4",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "concurrently": "^8.2.2",
    "config": "^3.3.11",
    "cookie-parser": "^1.4.6",
    "cross-env": "^7.0.3",
    "crypto-js": "^4.2.0",
    "ejs": "^3.1.10",
    "email-templates": "^12.0.1",
    "express-session": "^1.18.0",
    "fs-extra": "^11.2.0",
    "glob": "^10.4.2",
    "nestjs-twilio": "^4.4.0",
    "nodemailer": "^6.9.14",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.12.0",
    "pino-pretty": "^11.2.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "shelljs": "^0.8.5",
    "typeorm": "^0.3.20",
    "uuid": "^10.0.0",
    "winston": "^3.13.1",
    "winston-elasticsearch": "^0.19.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/elasticsearch": "^5.0.43",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
